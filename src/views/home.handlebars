{{#if user.first_name }}
<h1 class="wineTitle">Bienvenido {{user.first_name}}</h1>
{{else}}
<h1>Bienvenido</h1>
<p class="parrafoLoguearse">Por favor iniciar sesi√≥n para realizar una compra.</p>
{{/if}}

<main>
    <section>
        <div class='contenedorProducto'>
            {{#each products}}
            <div class="card">
                <picture>
                    <img src="/img/products/{{thumbnail}}" class="card-img-top" alt={{title}} />
                </picture>
                <div class="card-body">
                    <h3 class="card-title">{{title}}</h3>
                    <p>COD: {{code}}</p>
                    <p class='precioYCant'>
                        Precio:${{price}} Cantidad:{{stock}}
                    </p>
                </div>
                {{#isEqual ../user.role 'premium'}}
                ID de producto: {{_id}}
                Owner: {{owner}}
                {{/isEqual}}
                {{#isEqual ../user.role 'admin'}}
                ID de producto: {{_id}}
                Owner: {{owner}}
                {{/isEqual}}
                {{#isEqual ../user.role 'user'}}
                <button class="CartBtn" data-pid="{{_id}}" data-cid="{{../user.cart}}">
                    <span class="IconContainer">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512" class="cart">
                            <path fill="white"
                                d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z">
                            </path>
                        </svg>
                    </span>
                    <p class="text">Add to Cart</p>
                </button>
                {{/isEqual}}
                {{#isEqual ../user.role 'premium'}}
                <button class="CartBtn" data-pid="{{_id}}" data-cid="{{../user.cart}}">
                    <span class="IconContainer">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512"
                            fill="rgb(17, 17, 17)" class="cart">
                            <path
                                d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z">
                            </path>
                        </svg>
                    </span>
                    <p class="text">Add to Cart</p>
                </button>
                {{/isEqual}}

            </div>
            {{/each}}
        </div>
        <div class="botonesPage">
            {{#if hasPrevPage}}
            <a
                href="products?page={{prevPage}}{{#if sort}}&sort={{sort}}{{/if}}{{#if limit}}&limit={{limit}}{{/if}}{{#if category}}&category={{category}}{{/if}}"><button
                    class="btn btn-primary btnPaginate btn-sm">Anterior</button></a>
            {{/if}}

            {{#each pages}}
            <a
                href="products?page={{this}}{{#if sort}}&sort={{sort}}{{/if}}{{#if limit}}&limit={{limit}}{{/if}}{{#if category}}&category={{category}}{{/if}}"><button
                    class="btn btn-primary btnPaginate btn-sm">{{this}}</button></a>
            {{/each}}

            {{#if hasNextPage}}
            <a
                href="products?page={{nextPage}}{{#if sort}}&sort={{sort}}{{/if}}{{#if limit}}&limit={{limit}}{{/if}}{{#if category}}&category={{category}}{{/if}}"><button
                    class="btn btn-primary btnPaginate btn-sm">Siguiente</button></a>
            {{/if}}
        </div>
    </section>
    <footer>
        <p> Created by Brian Pagano | todos los derechos reservados</p>
    </footer>
</main>


<script src="/js/products.js"></script>